<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.mgo983.myapplication.MainActivity">
    <ImageView
        android:layout_width="400dp"
        android:layout_height="match_parent"
        android:src="@drawable/ic_launcher_background"
        android:id="@+id/image"
        android:layout_margin="10dp"
        />
<ListView
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:id="@+id/questions"
    android:layout_toRightOf="@id/image"></ListView>
    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/baseline_navigate_next_white_48dp"
        android:background="@drawable/circular_button"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_margin="20sp"
        android:id="@+id/next_image"
        />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/baseline_navigate_before_white_48dp"
        android:background="@drawable/circular_button"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_margin="20sp"
        android:id="@+id/previous_image"
        />

</RelativeLayout>
